		for (int i = 0; i < allElements.length; i++) {
			
		}
	}
	
	public void paintComponent(Graphics g) {
        super.paintComponent(g);
    }

	@Override
	public void actionPerformed(ActionEvent ae) {
		this.rotateBlobs();
		
		repaint();
	}
	
	
}
