package fluid_modes;

/**
 * creates a perturbation mode with 'm' blobs
 *
 */
public class Mode {
	
	private int mode_number;
	private Blob[] blobs;
	
	/**
	 * 
	 * @param m
	 * @param angle
	 */
	public Mode(int m, double angle) {
		this.mode_number = m;
		
		blobs = new Blob[m];
		double theta = (Math.PI / 180.0) * angle;
		for (int i = 0; i < m; i++) {
			double x = Math.cos(theta);
			double y = Math.sin(theta);
			blobs[i] = new Blob(x, y);
			
			theta += 2 * Math.PI / m;
		}
	}
}
